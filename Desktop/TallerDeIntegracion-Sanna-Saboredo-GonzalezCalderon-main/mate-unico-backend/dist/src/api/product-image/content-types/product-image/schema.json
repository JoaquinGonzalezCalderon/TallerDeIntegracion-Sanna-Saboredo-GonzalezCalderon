{
    "kind": "collectionType",
    "collectionName": "product_images",
    "info": {
        "singularName": "product-image",
        "pluralName": "product-images",
        "displayName": "ProductImage"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "image": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "alt": {
            "type": "string"
        },
        "product": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::product.product",
            "inversedBy": "product_image"
        }
    }
}
