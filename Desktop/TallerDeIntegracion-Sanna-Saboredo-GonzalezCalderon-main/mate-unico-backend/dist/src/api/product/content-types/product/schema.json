{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "blocks"
        },
        "basePrice": {
            "type": "decimal",
            "required": true,
            "default": 0
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "categories": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::category.category",
            "mappedBy": "products"
        },
        "product_image": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::product-image.product-image",
            "mappedBy": "product"
        }
    }
}
